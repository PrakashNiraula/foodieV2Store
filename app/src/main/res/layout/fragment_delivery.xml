<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Delivery">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/action_round" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-2dp"
        android:elevation="10dp"

        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Order:"
                android:fontFamily="@font/coresans_cr_medium"
                android:textColor="@color/colorBalck"
                android:textSize="21dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Delivery options"
                android:fontFamily="@font/coresans_cr_medium"
                android:textColor="@color/colorBalck"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Select Rider"
                    android:fontFamily="@font/coresans_cr_medium"
                    android:textColor="@color/colorBalck"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>
<!--                <Spinner-->
<!--                    android:id="@+id/riderlist"-->
<!--                    android:layout_width="200dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:background="@drawable/button_round"-->
<!--                    />-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".28"

                    android:background="@drawable/border"
                    android:orientation="horizontal">

                <Spinner
                    android:id="@+id/riderlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="25dp"
                    android:padding="3dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit" />
                </RelativeLayout>


                <!--                <Spinner-->
<!--                    android:id="@+id/spinner2"-->
<!--                    android:layout_width="200dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_gravity="center"-->

<!--                    android:gravity="center"-->
<!--                    android:layout_marginLeft="5dp"-->
<!--                    android:spinnerMode="dropdown"-->
<!--                    android:background="@drawable/button_round"/>-->




            </LinearLayout>


            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Status: "
                android:fontFamily="@font/coresans_cr_medium"
                android:textColor="@color/colorBalck"
                android:textSize="18dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorBalck"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/txtaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Deliver to :"
                        android:fontFamily="@font/coresans_cr_medium"
                        android:textColor="@color/colorBalck"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"

                    >

                <TextView
                    android:id="@+id/txtphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Mob: "
                    android:fontFamily="@font/coresans_cr_medium"
                    android:textColor="@color/colorBalck"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>


                    <TextView
                        android:id="@+id/txt_call"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:text="Call"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Total Nrs :"
                    android:fontFamily="@font/coresans_cr_medium"
                    android:textColor="@color/colorBalck"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Tax "
                    android:fontFamily="@font/coresans_cr_medium"
                    android:textColor="@color/colorBalck"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">
                    <TextView
                        android:id="@+id/deliverycharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Delivery Charge(in Nrs):"
                        android:fontFamily="@font/coresans_cr_medium"
                        android:textColor="@color/colorBalck"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtdeliveryCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="10"
                    android:inputType="number"
                    android:textColor="@color/colorBalck" />




                </LinearLayout>


                <TextView
                    android:id="@+id/paymentmethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Payment method:"
                    android:fontFamily="@font/coresans_cr_medium"
                    android:textColor="@color/colorBalck"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/txtaccept"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_round"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/txt_reject"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_round_red"
                    android:gravity="center"
                    android:text="Reject"
                    android:textColor="@color/colorWhite" />






            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</FrameLayout>